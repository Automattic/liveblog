{
	"name": "automattic/liveblog",
	"description": "Liveblogging done right. Using WordPress.",
	"license": "GPL-2.0-or-later",
	"type": "wordpress-plugin",
	"authors": [
		{
			"name": "Automattic",
			"homepage": "https://automattic.com/"
		}
	],
	"homepage": "https://github.com/Automattic/liveblog/",
	"support": {
		"issues": "https://github.com/Automattic/liveblog/issues",
		"source": "https://github.com/Automattic/liveblog"
	},
	"require": {
		"php": ">=7.4",
		"composer/installers": "^1.0 || ^2.0"
	},
	"require-dev": {
		"automattic/vipwpcs": "^3",
		"php-parallel-lint/php-parallel-lint": "^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^4 || ^5 || ^6 || ^7",
		"predis/predis": "~1.0.3",
		"rase/socket.io-emitter": "~0.7.0",
		"yoast/phpunit-polyfills": "^0.2.0"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	},
	"scripts": {
		"coverage": [
			"@php ./vendor/bin/phpunit --coverage-html ./build/coverage-html"
		],
		"coverage-ci": "wp-env run tests-cli --env-cwd=wp-content/plugins/liveblog ./vendor/bin/phpunit --testsuite WP_Tests",
		"cs": [
			"@php ./vendor/bin/phpcs -q"
		],
		"cs-fix": [
			"@php ./vendor/bin/phpcbf -q"
		],
		"i18n": "@php wp i18n make-pot . ./languages/liveblog.pot",
		"lint": [
			"@php ./vendor/php-parallel-lint/php-parallel-lint/parallel-lint . -e php --exclude vendor --exclude .git"
		],
		"lint-ci": [
			"@php ./vendor/php-parallel-lint/php-parallel-lint/parallel-lint . -e php --exclude vendor --exclude .git --checkstyle"
		],
		"test-integration": "wp-env run tests-cli --env-cwd=wp-content/plugins/liveblog ./vendor/bin/phpunit --testsuite WP_Tests",
		"test-integration-ms": "wp-env run tests-cli --env-cwd=wp-content/plugins/liveblog /bin/bash -c 'WP_MULTISITE=1 ./vendor/bin/phpunit --testsuite WP_Tests'"
	},
	"scripts-descriptions": {
		"coverage": "Run tests with code coverage reporting",
		"coverage-ci": "Run integration tests with code coverage reporting in wp-env",
		"cs": "Run PHP Code Sniffer",
		"cs-fix": "Run PHP Code Sniffer and fix violations",
		"i18n": "Generate a POT file for translation",
		"lint": "Run PHP linting",
		"lint-ci": "Run PHP linting and send results to stdout",
		"test-integration": "Run integration tests in wp-env",
		"test-integration-ms": "Run integration tests in multisite mode in wp-env"
	}
}
